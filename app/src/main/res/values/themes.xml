<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MitraProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/mitra_primary</item>
        <item name="colorPrimaryVariant">@color/mitra_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/mitra_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/mitra_background</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">@color/mitra_primary_dark</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Typography -->
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item> <!-- optional custom font -->
    </style>
</resources>
