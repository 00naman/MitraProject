<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling today?"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/mood_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/mood_happy" android:text="ðŸ˜Š" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/mood_neutral" android:text="ðŸ˜" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/mood_sad" android:text="ðŸ˜¢" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Sleep Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you sleep well last night?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/sleep_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/sleep_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/sleep_no" android:text="No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Stress Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you feel stressed?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/stress_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/stress_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/stress_no" android:text="No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Anxiety Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you feel anxious today?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/anxiety_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/anxiety_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/anxiety_no" android:text="No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Social Interaction Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you interacted with any friends today?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/friends_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/friends_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/friends_no" android:text="No"  android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Bullying Experience -->

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you experienced bullying recently?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/bullying_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/bullying_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/bullying_no" android:text="No"  android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Hopelessness (Depression Indicator) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you been feeling hopeless lately?"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/depression_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/depression_yes" android:text="Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/depression_no" android:text="No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Submit & Insights -->
        <Button
            android:id="@+id/btn_submit_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tv_insights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="24dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
